    <!-- 실습 get으로 정보 받기 -->
    <form action="/getForm" method="get">
        이름 <input type="text" name="name">
        <fieldset>
            <legend>성별</legend>
            <input type="radio" value="man" name="sex"> 남자
            <input type="radio" value="woman" name="sex"> 여자
        </fieldset>
        <fieldset>
            <legend>생년월일</legend>
            <select name="year" id="year">
                <%for(let i=1970; i < 2024; i++){%>
                    <option value="<%= i%>">
                        <%= i%>
                    </option>
                    <%}%>
            </select>
            년
            <select name="month" id="month">
                <%for(let i=1; i < 13; i++){%>
                    <option value="<%= i%>">
                        <%= i%>
                    </option>
                    <%}%>
            </select>
            월
            <select name="date" id="date">
                <%for(let i=1; i < 32; i++){%>
                    <option value="<%= i%>">
                        <%= i%>
                    </option>
                    <%}%>
            </select>
            일
        </fieldset>
        <fieldset>
            <legend>관심사</legend>
            <input type="checkbox" value="trip" name="interest"> 여행
            <input type="checkbox" value="fashion" name="interest"> 패션
            <input type="checkbox" value="food" name="interest"> 음식
        </fieldset>
        <button>회원가입</button>
    </form>
